    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "baseUrl": "./src",
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "test"
  ]
}
