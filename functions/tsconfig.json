{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "test"
  ]
}
